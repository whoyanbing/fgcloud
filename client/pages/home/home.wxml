<view class="page">
    <view class="page__bd">
        <view class="weui-cells__title">个人信息</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__hd" style="position: relative;margin-right: 10px;">
                    <image src="{{userInfo.avatarUrl}}" style="width: 50px; height: 50px; display: block"/>
                </view>
                <view class="weui-cell__bd">
                    <view>{{userInfo.nickName}}</view>
                    <view wx:if="{{userInfo.gender}}" style="font-size: 13px;color: #888888;">男</view>
                    <view wx:else="{{userInfo.gender}}" style="font-size: 13px;color: #888888;">女</view>
                </view>
            </view>
            <view class="weui-cell weui-cell_access">
                <view class="weui-cell__bd">
                    <view style="display: inline-block; vertical-align: middle">国家</view>
                </view>
                <view class="weui-cell__ft weui-cell__ft_in-access">{{userInfo.country}}</view>
            </view>
            <view class="weui-cell weui-cell_access">
                <view class="weui-cell__bd">
                    <view style="display: inline-block; vertical-align: middle">省份</view>
                </view>
                <view class="weui-cell__ft weui-cell__ft_in-access">{{userInfo.province}}</view>
            </view>
            <view class="weui-cell weui-cell_access">
                <view class="weui-cell__bd">
                    <view style="display: inline-block; vertical-align: middle">城市</view>
                </view>
                <view class="weui-cell__ft weui-cell__ft_in-access">{{userInfo.city}}</view>
            </view>
        </view>
    </view>
</view>